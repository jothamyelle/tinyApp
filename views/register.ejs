<!-- urls_show.ejs: renders a page that includes a form with an email and password field -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp - Register User</title>
</head>
<body>
  <div style="max-width:30%;margin-left:auto;margin-right:auto;text-align:center;">
    <header>
      <% include partials/_header %>
    </header>
    <main style="margin-top:50px;border:solid black 1px;border-radius:30px;box-shadow:3px 3px 5px;background-color:#f7fff2;">
      <h1> Register User:</h1>
      <form method="POST" action="/register">
        <table>
        <tr>
          <td>
            email:
          </td>
          <td>
            <input type="email" value="" name="email" size="45px"/>
          </td>
        </tr>
        <tr>
          <td>
            password:
          </td>
          <td>
          <input type="password" value="" name="password" size="45px"/>
          </td>
        </tr>
        </table>
        <input type="submit" value="Submit">
      </form>
    </main>
  </div>
</body>
</html>