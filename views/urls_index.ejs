<!-- urls_index.ejs: renders a page that displays the a short and long url -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp - Home</title>
  </head>
  <body>
    <div style="max-width:50%;margin-left:auto;margin-right:auto;text-align:center;">
      <header>
        <% include partials/_header %>
      </header>
      <main style="margin-top:50px;border:solid black 1px;border-radius:30px;box-shadow:3px 3px 5px;background-color:#f7fff2;">
        <h2>Your URLs:</h2>
        <ul style="list-style-type: none;">
          <% for (let url in urls) { %>
          <li style="margin-bottom:20px;">
            <form method="POST">
              <%- url %> &rarr; <%- urls[url].longURL %> - (Created: <%- urls[url].dateCreated %>) 
              <input formaction="/urls/<%- url %>/update" type="submit" value="Edit 📝" style="border-radius:20px;cursor:pointer;color:blue;"/>
              <input formaction="/urls/<%- url %>/delete" type="submit" value="Delete 🗑️" style="border-radius:20px;cursor:pointer;color:red;"/>
            </form>
          </li>
          <% } %>
        </ul>
        <button style="border-radius:20px;margin-bottom:15px;"><a href="/urls/new" style="text-decoration:none;color:black;">✂🔗 Shorten a New Link</a></button>
      </main>
    </div>
  </body>
</html>