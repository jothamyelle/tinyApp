<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp - Login</title>
  </head>
  <body>
    <div style="max-width:30%;margin-left:auto;margin-right:auto;text-align:center;">
      <header>
        <% include partials/_header %>
      </header><% if(!session || session && session.id === undefined) { %>
      <main style="margin-top:50px;border:solid black 1px;border-radius:30px;box-shadow:3px 3px 5px;background-color:#f7fff2;">
        <h2> Login</h2>
        <form method="POST" action="/login">
          <table>
          <tr>
            <td>
              email:
            </td>
            <td>
              <input type="email" value="" name="email" size="45px"/>
            </td>
          </tr>
          <tr>
            <td>
              password:
            </td>
            <td>
            <input type="password" value="" name="password" size="45px"/>
            </td>
          </tr>
          </table>
          <br>
          <br>
          <input type="submit" value="Submit" style="border-radius:20px;margin-left:20px;color:blue;margin-bottom:15px;">
          </form>
      </main>
        <% } else { %>
        <main style="margin-top:50px;">
          <h2>You're logged in as <%= session.email %></h2>
          <button style="border-radius:20px;cursor:pointer;"><a href="/urls" style="text-decoration:none;color:blue;">Home</a></button>
        </main>
        <% } %>
    </div>
  </body>
</html>